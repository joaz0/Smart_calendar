{
  "name": "smart-calendar-backend",
  "version": "1.0.0",
  "description": "Backend para Smart Calendar - Sistema de agenda inteligente",
  "main": "src/server.js",
  "scripts": {
    "start": "npm run build && node dist/scripts/migrate.js && node start.js",
    "dev": "npx ts-node src/server.ts",
