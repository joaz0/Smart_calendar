    "migrate": "npx ts-node src/scripts/migrate.ts",
    "migrate-full": "npx ts-node src/scripts/setup-database.ts",
    "add-test-user": "npx ts-node src/scripts/add-test-user.ts",
    "create-test-user": "npx ts-node src/scripts/create-test-user.ts",
    "ensure-test-user": "npx ts-node src/scripts/ensure-test-user.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@types/node": "^20.0.0",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-microsoft": "^1.0.0",
    "pg": "^8.11.3",
    "typescript": "^5.3.3"
